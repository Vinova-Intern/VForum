<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_auth">

    <ImageButton
        android:id="@+id/change_password_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:tint="#6600cc"
        android:background="@color/transparent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/return_to_homepage"
        app:tint="@color/black"/>

    <TextView
        android:id="@+id/txt_old_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/old_password"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edt_old_password"
        app:layout_constraintTop_toBottomOf="@id/change_password_back_button" />

    <EditText
        android:id="@+id/edt_old_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/black"
        android:hint="@string/old_password"
        android:textSize="18sp"
        android:textColorHint="@color/black"
        android:background="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/txt_renew_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_old_password"
        app:layout_constraintBottom_toBottomOf="@id/txt_old_password"/>

    <TextView
        android:id="@+id/txt_new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/new_password"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edt_new_password"
        app:layout_constraintTop_toBottomOf="@+id/txt_old_password" />

    <EditText
        android:id="@+id/edt_new_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="@string/new_password"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/txt_renew_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_new_password"
        app:layout_constraintBottom_toBottomOf="@id/txt_new_password"/>

    <TextView
        android:id="@+id/txt_renew_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_new_password" />

    <TextView
        android:id="@+id/confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button_drawable"
        android:gravity="center"
        android:padding="10dp"
        android:textAllCaps="true"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_renew_password" />

    <EditText
        android:id="@+id/edt_renew_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="@string/confirm_password"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/txt_renew_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_renew_password"
        app:layout_constraintBottom_toBottomOf="@id/txt_renew_password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_renew_password"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>