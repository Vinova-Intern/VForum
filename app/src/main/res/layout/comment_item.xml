<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    android:layout_margin="4dp"
    >

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cmt_user_ava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/cmt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@id/cmt_user_ava"
            android:text="@string/kane"
            android:textColor="#000"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/cmt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cmt_user_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@id/cmt_user_ava"
            android:text="@string/android"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/standard_margin">

            <ImageView
                android:id="@+id/cmt_like_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="@dimen/small_margin"
                android:src="@drawable/icon_like" />

            <TextView
                android:id="@+id/like_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cmt_desc"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/list_topic_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:orientation="vertical"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
