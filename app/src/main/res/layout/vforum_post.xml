<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/vforum_item_groupname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Group name"
        android:textSize="22sp"
        android:textColor="#04040F"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/vforum_item_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/feed_option"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vforum_item_groupname"/>

    <TextView
        android:id="@+id/vforum_item_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic:  "
        android:textSize="18sp"
        android:textColor="#04040F"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/vforum_item_groupname"
        app:layout_constraintStart_toStartOf="@+id/vforum_item_groupname"/>

    <TextView
        android:id="@+id/vforum_item_topic_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textColor="#ff4d4d"
        app:layout_constraintTop_toTopOf="@+id/vforum_item_topic"
        app:layout_constraintStart_toEndOf="@+id/vforum_item_topic"/>

    <TextView
        android:id="@+id/vforum_item_postby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Posted by  "
        android:textSize="15sp"
        android:textColor="#04040F"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/vforum_item_topic"
        app:layout_constraintStart_toStartOf="@+id/vforum_item_groupname" />

    <TextView
        android:id="@+id/vforum_item_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="15sp"
        android:textColor="#ff4d4d"
        app:layout_constraintTop_toTopOf="@+id/vforum_item_postby"
        app:layout_constraintStart_toEndOf="@+id/vforum_item_postby"/>

    <TextView
        android:id="@+id/vforum_item_post_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post title"
        android:textSize="30sp"
        android:textColor="#04040F"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/vforum_item_postby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/vforum_item_post_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/post_description"
        android:textSize="20sp"
        android:textColor="#04040F"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/vforum_item_post_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/vforum_item_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_like"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/vforum_item_post_description"
        app:layout_constraintTop_toBottomOf="@id/vforum_item_post_description" />

    <ImageView
        android:id="@+id/vforum_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/post_comment"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toEndOf="@+id/vforum_item_like"
        app:layout_constraintTop_toTopOf="@id/vforum_item_like"/>

    <TextView
        android:id="@+id/vforum_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vforum_item_like" />

</androidx.constraintlayout.widget.ConstraintLayout>