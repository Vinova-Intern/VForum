<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/create_post_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:tint="@color/black"
        android:background="@color/transparent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/return_to_homepage" />

    <TextView
        android:id="@+id/create_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_post"
        android:textSize="30sp"
        android:textColor="@color/light_orange"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/create_post_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/create_post_group_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/group_edt"
        android:textSize="22sp"
        android:textColor="#e6e6e6"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/create_post_back_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/create_post_group_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@+id/create_post_group_tv"
        app:layout_constraintStart_toEndOf="@+id/create_post_group_tv"
        tools:ignore="Autofill,TextFields" />

    <TextView
        android:id="@+id/create_post_topic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topic_edt"
        android:textSize="22sp"
        android:textColor="#e6e6e6"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/create_post_group_tv"
        app:layout_constraintStart_toStartOf="@+id/create_post_group_tv"/>

    <EditText
        android:id="@+id/create_post_topic_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@+id/create_post_topic_tv"
        app:layout_constraintStart_toEndOf="@+id/create_post_topic_tv"
        tools:ignore="Autofill,TextFields"/>

    <TextView
        android:id="@+id/create_post_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/post_title_edt"
        android:textSize="20sp"
        android:textColor="#e6e6e6"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/create_post_topic_tv"
        app:layout_constraintStart_toStartOf="@+id/create_post_topic_tv" />

    <EditText
        android:id="@+id/create_post_title_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/post_title"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@+id/create_post_title_tv"
        app:layout_constraintStart_toEndOf="@+id/create_post_title_tv"
        tools:ignore="Autofill,TextFields"/>

    <TextView
        android:id="@+id/create_post_description_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/post_description_edt"
        android:textSize="20sp"
        android:textColor="#e6e6e6"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/create_post_title_tv"
        app:layout_constraintStart_toStartOf="@+id/create_post_title_tv" />

    <EditText
        android:id="@+id/create_post_description_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/post_description"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/transparent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/create_post_description_tv"
        app:layout_constraintStart_toStartOf="@+id/create_post_description_tv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="Autofill,TextFields"/>

    <TextView
        android:id="@+id/create_post_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_sign_in_0"
        android:gravity="center"
        android:text="@string/create"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_post_description_edt" />

</androidx.constraintlayout.widget.ConstraintLayout>